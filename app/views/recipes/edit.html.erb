<% content_for(:title, " Edit #{@recipe.name} | Recipes of Portland ") %>

<h2>Edit your new recipe</h2>

<%= render('layouts/errors', :object => @recipe) %>

<form method="post" action="/recipes/<%= @recipe.id %>/edit">
  <input type="hidden" name="_method" value="patch">
  <%= render('form') %>
  <button>Update Your Recipe</button>
</form>
